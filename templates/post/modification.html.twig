{# templates/publication/modification.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Modifier la publication{% endblock %}

{% block body %}
{% include "commun/header.html.twig" %}
<div class="container">
    <h1>Modifier la publication</h1>

    {{ form_start(form) }}

    <div class="form-group">
        {{ form_label(form.contenuPost) }}
        {{ form_widget(form.contenuPost) }}
        {{ form_errors(form.contenuPost) }}
    </div>

    {# Ajoutez d'autres champs du formulaire si nécessaire en suivant la même structure #}

    <div class="form-group">
        {{ form_widget(form.Enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>

    {{ form_end(form) }}
</div>
{% include "commun/footer.html.twig" %}
{% endblock %}
