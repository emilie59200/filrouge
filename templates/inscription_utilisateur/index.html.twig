{% extends 'base.html.twig' %}

{% block title %}inscription_utilisateur
{% endblock %}
{% block stylesheets %}<link href="{{ asset('./asset/css/inscription_utilisateur.css') }}" rel="stylesheet"/>
{% endblock %}
{% block body %}
	{% include "commun/header.html.twig" %}
	<div class="container">
		<div class="row">

			<h3 class="text-center">Inscription à Mobility</h3>
			{{ form_start(utilisateurForm) }}<br>
			<fieldset class="mb-3">
				{{ form_row(utilisateurForm.prenomUtilisateur, {
                        label: 'Prénom'
                    }) }}<br>
				{{ form_row(utilisateurForm.emailUtilisateur, {
                        label: 'E-mail'
                    }) }}<br>
				{{ form_row(utilisateurForm.telephone, {
                        label: 'Téléphone' 
                    }) }}<br>
			</fieldset>

			{{ form_row(utilisateurForm.mdpUtlisateur, {
                        label: 'Mot de passe'
                    }) }}<br>

			<div class="btn">
				<button type="submit" class="btn1">S'inscrire</button>
				<button type="submit" class="btn1" href="{{ path('app_connexion') }}" class="btn2">Se connecter</button>
			</div>
			{{ form_end(utilisateurForm) }}
		</div>
	</div>

	{% include "commun/footer.html.twig" %}
{% endblock %}
